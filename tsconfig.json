{
    "include": ["src", "types"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": false,
        "removeComments": false
    },
    "$schema": "https://json.schemastore.org/tsconfig"
}
